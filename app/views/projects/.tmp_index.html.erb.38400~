    function movr(k){
        if (document.images) 
            eval('document.img' + k + '.src=img' + k + '_on.src');
    }
    
    function mout(k){
        if ((document.images) && (selImg != k)) 
            eval('document.img' + k + '.src=img' + k + '_off.src');
    }
    
    function mclick(k){
        selImg = k;
        if (document.images) {
            eval('document.img' + k + '.src=img' + k + '_on.src');
            eval('document.img' + prevSelImg + '.src=img' + prevSelImg + '_off.src');
            eval('$("#prj' + prevSelImg + '").hide();');
            eval('$("#prj' + k + '").show("slide", { direction: "right"}, 1000);')
            prevSelImg = k;
            
        }
    }
    
    
    
